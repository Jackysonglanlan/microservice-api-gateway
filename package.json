{
  "name": "nginx-remote-automator",
  "version": "1.0.0",
  "description": "nginx(openresty) automator via npm script",
  "scripts": {
    "//--------------------------------------- DEV --------------------------------------------": "",
    "dev-start": "scripts/dev-start.sh start",
    "deploy-to-200": "pm2 deploy dev",
    "//--------------------------------------- TEST --------------------------------------------": "",
    "test": "npm run test-only -- --pattern=tests\\-.+ -- lua/tests",
    "test-only": "resty lua/bin/busted ",
    "//-------------------------------------- DEPLOY --------------------------------------------": "",
    "deploy-config": "scripts/op-dispatch-server.sh deploy",
    "remote-reload": "scripts/op-dispatch-server.sh remote_reload",
    "//--------------------------------------- PRODCTION --------------------------------------------": "",
    "start": "pm2 start ecosystem.json --env production",
    "//--------------------------------------- HOOKS --------------------------------------------": "",
    "pretest-only": "scripts/build.sh",
    "prestart": "scripts/build.sh",
    "predev-start": "scripts/build.sh"
  },
  "keywords": [
    "Deploy",
    "Nginx",
    "Openresty",
    "Devops"
  ],
  "author": "jackysong <jackysonglanlan@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "1.12.1"
  },
  "dependencies": {
    "pm2": "2.7.1"
  }
}